#include <iostream>
#include <cstdint> //C++11
using namespace std;

int main() {
	int a = 1;
	int b = 123456789; // ok or not?
	int c = -123456789; // ok or not?

	short int x;
	int y;  // sizeof(int) >= 16
	long int z;
	long long int w; //64 bits?   sizeof(x) <= sizeof(y) <= sizeof(z)



	return 0;
}
